<% provide :title, t("home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
       <section class="user_info">
         <%= render "shared/user_info" %>
       </section>
       <section class="micropost_form">
        <%= render "shared/micropost_form" %>
       </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "micropost" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "welcome_to" %></h1>
      <h2>
        <%= t ".this_is_home_page" %>
        <%= link_to Settings.rails_tut, Settings.rails_tut_org %>
        <%= t ".sample_app" %>
      </h2>
    <%= link_to t("sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
